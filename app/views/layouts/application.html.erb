<!DOCTYPE html>
<html>
  <head>
    <title>Magnum C.I.</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <%= stylesheet_link_tag 'screen', 'notification' %>
    <!--[if IE]>
    <link rel="stylesheet" href="/stylesheets/ie.css" type="text/css" media="screen">
    <![endif]-->
    <!--[if IE 6]>
    <link rel="stylesheet" href="/stylesheets/ie6.css"  type="text/css" media="screen">
    <![endif]-->
    <!-- FIXME: Added event_calendar.js file back in -->
    <%= javascript_include_tag :defaults, 'notification' %>    
  </head>
  <body>
    <div id="container">
      <%= link_to 'Magnum C.I.', root_path, :id => 'branding' %>
      <div id="content">
        <%= yield %>
      </div>
    </div>
    <div id="container_bottom"></div>
    <div class="clearfix"></div>
    <div id='notifications'>
      <div class='notification-bar-container'>
        <% if flash[:success] %>
          <div class='notification-bar-bkg-message-success'>
          </div>
          <div class='notification-bar'>
            <div class='notification-bar-contents'>
              <div class='message message-success'>
                <%= flash[:success] %>
              </div>
            </div>
          </div>
        <% end %>
        <% if flash[:notice] %>
          <div class='notification-bar-bkg-message-notice'>
          </div>
          <div class='notification-bar'>
            <div class='notification-bar-contents'>
              <div class='message message-notice'>
                <%= flash[:notice] %>
              </div>
            </div>
          </div>
        <% end %>
        <% if flash[:error] %>
          <div class='notification-bar-bkg-message-error'>
          </div>
          <div class='notification-bar'>
            <div class='notification-bar-contents'>
              <div class='message message-error'>
                <%= flash[:error] %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </body>
</html>
